<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        tools:context=".sqite.SaveDataActivity">

    <EditText android:id="@+id/etInput" android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <TextView android:id="@+id/tvShowContent" android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <Button android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="写入文件"
            android:onClick="saveDataToFile"
    />

    <Button android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="读取文件"
            android:onClick="readDataFromFile"
    />


    <Button android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="写入SharePreference"
            android:onClick="saveDataToSharedPreferences"
    />

    <Button android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="读取SharePreference"
            android:onClick="readDataFromSharedPrefences"
    />


    <Button android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="创建数据库"
            android:onClick="onCreateDataBase"
    />

    <Button android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="插入数据"
            android:onClick="insertData"
    />


    <Button android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="更新数据"
            android:onClick="updateData"
    />

    <Button android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="删除数据"
            android:onClick="deleteData"
    />


    <Button android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="查询数据"
            android:onClick="queryData"
    />



</LinearLayout>